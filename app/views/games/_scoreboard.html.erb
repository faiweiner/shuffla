<h2>Scoreboard</h2>
<table id="scoreboard">
  <tr>
    <th>Rank</th>
    <th>Player</th>
    <th>Score</th>
    <td>Fastest Time</td>
  </tr>
    <% @games_all.each.with_index do |game, index| %>
      <tr>
        <td><%= index + 1 %>. </td>
        <td>
          <%= game.user.name %>    
        </td>
        <td>
          <%= game.total_time_points %>
        </td>
        <td>
          <%= game.questions.average("duration") %>
          </td>
      </tr>
    <% end %>
</table>