%div.signup_form
  = form_for @user do |f|
    %div.signup_field
      = f.label :username
      = f.text_field :username, :autofocus => true
      %p.caption email address
    %div.signup_field
      = f.label :name
      = f.text_field :name
      %p.caption display name
    %div.signup_field
      = f.label :avatar
      = f.url_field :avatar
      %p.caption url only
    %div.signup_field
      = f.label :password
      = f.password_field :password
    %div.signup_field
      = f.label :password_confirmation
      = f.password_field :password_confirmation
    %div.signup_field_center
      = f.submit :class => "form_submit"